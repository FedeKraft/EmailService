datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  isAdmin    Boolean  @default(false)
  emailCount Int      @default(0)
  createdAt  DateTime @default(now())
}
